function language_setDefaults()
{
	unset LANG
	unset LC_COLLATE
	unset LC_CTYPE
	unset LC_MESSAGES
	unset LC_MONETARY
	unset LC_NUMERIC
	unset LC_TIME
	unset LC_ALL
	
	export LANG="$vsh_language"
	export LC_COLLATE="$vsh_language"
	export LC_CTYPE="$vsh_language"
	export LC_MESSAGES="$vsh_language"
	export LC_MONETARY="$vsh_language"
	export LC_NUMERIC="$vsh_language"
	export LC_TIME="$vsh_language"
	export LC_ALL=""
}
