function language_setDefaults()
{
	unset LANG
	unset LC_COLLATE
	unset LC_CTYPE
	unset LC_MESSAGES
	unset LC_MONETARY
	unset LC_NUMERIC
	unset LC_TIME
	unset LC_ALL
	
	export LANG="$switch_language"
	export LC_COLLATE="$switch_language"
	export LC_CTYPE="$switch_language"
	export LC_MESSAGES="$switch_language"
	export LC_MONETARY="$switch_language"
	export LC_NUMERIC="$switch_language"
	export LC_TIME="$switch_language"
	export LC_ALL=""
}
