function api_admin()
{
	if [ $# -ne 0 ]; then
		exitError "command admin takes no <args>"
	fi
	
	local curl_downloadFilePath
	curl_wrapperLoggedInRelativeApiCall GET /api/admin/
	
	case "$format" in
		
		xml)
			cat "$curl_downloadFilePath"
		;;
		
		links)
			xml_startlet_extractTsv "$curl_downloadFilePath" '/_:VCloud/_:OrganizationReferences/_:OrganizationReference' '@href' '@type' '@name'
		;;
		
		id)
			xml_startlet_extractTsv "$curl_downloadFilePath" '/_:VCloud' '@href' '@type' '@name'
		;;
		
		data)
			xml_startlet_extractTsv "$curl_downloadFilePath" '/_:VCloud' '_:Description'
		;;
		
		*)
			exitError "Please specify format as either xml or links, not $format"
		;;
		
	esac
}

function api_org()
{
	if [ $# -ne 1 ]; then
		exitError "command org requires <name>"
	fi
	local -r orgName="$1"
	
	temporaryFiles_newFileToRemoveOnExit
	local -r orgsTsvFile="$TMP_FILE"
	format=links api_orgs >"$orgsTsvFile"
	
	local foundHref=""
	local href mimeType name
	while IFS=$'\t' read -r -d $'\n' href mimeType name
	do
		if [ "$name" = "$orgName" ]; then
			foundHref="$href"
			break
		fi
	done <"$orgsTsvFile"
	
	if [ -z "$foundHref" ]; then
		informationMessage FAIL "Could not find org $orgName"
		exitError 1
	fi
	
	local curl_downloadFilePath
	curl_wrapperLoggedInAbsoluteApiCall GET "$foundHref"
	
	case "$format" in
		
		xml)
			cat "$curl_downloadFilePath"
		;;
		
		links)
			xml_startlet_extractTsv "$curl_downloadFilePath" '/_:Org/_:Link' '@rel' '@href' '@type' '@name'
		;;
		
		id)
			xml_startlet_extractTsv "$curl_downloadFilePath" '/_:Org' '@id'
		;;
		
		data)
			xml_startlet_extractTsv "$curl_downloadFilePath" '/_:Org' '_:FullName' '_:Description'
		;;
		
		*)
			exitError "Please specify format as either xml or links, not $format"
		;;
		
	esac
}

